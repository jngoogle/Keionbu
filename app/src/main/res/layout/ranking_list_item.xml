<?xml version="1.0" encoding="utf-8"?>
<!--排行榜 列表项布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="2dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/draweeView_rankingPic"
        android:layout_width="@dimen/ranking_pic_size"
        android:layout_height="@dimen/ranking_pic_size"
        android:layout_marginBottom="@dimen/ranking_pic_margin"
        android:layout_marginLeft="@dimen/ranking_pic_margin"
        android:layout_marginTop="@dimen/ranking_pic_margin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ranking_pic_margin"
        android:layout_marginLeft="@dimen/ranking_pic_margin"
        android:layout_marginTop="@dimen/ranking_pic_margin"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_no1"
            style="@style/ranking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.让我们荡起双桨"/>

        <TextView
            android:id="@+id/tv_no2"
            style="@style/ranking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.我从草原来"/>

        <TextView
            android:id="@+id/tv_no3"
            style="@style/ranking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.小拳拳捶你胸口"/>

    </LinearLayout>
</LinearLayout>