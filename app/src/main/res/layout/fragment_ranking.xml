<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.jngoogle.keionbu.fragment.subTabFragment.RankingFragment">

    <!--官方榜-->
    <LinearLayout
        android:id="@+id/lay_officalList"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/ranking_margin_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官方榜"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_ranking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay_officalList"
        android:layout_marginLeft="@dimen/recycleView_margin"
        android:layout_marginTop="@dimen/recycleView_margin">
    </ListView>

</LinearLayout>
